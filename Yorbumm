local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local backpack = player:WaitForChild("Backpack")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetDupeGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 230, 0, 130)
frame.Position = UDim2.new(0.05, 0, 0.8, 0)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 45)
frame.BackgroundTransparency = 0.1
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 10)

local title = Instance.new("TextLabel", frame)
title.Text = "üêæ Pet Dupe Visual"
title.Font = Enum.Font.FredokaOne
title.TextSize = 20
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.Size = UDim2.new(1, 0, 0, 30)
title.Position = UDim2.new(0, 0, 0, 5)

local petLabel = Instance.new("TextLabel", frame)
petLabel.Text = "Equipped Pet: [None]"
petLabel.Font = Enum.Font.Gotham
petLabel.TextSize = 16
petLabel.TextColor3 = Color3.fromRGB(255, 230, 180)
petLabel.BackgroundTransparency = 1
petLabel.Position = UDim2.new(0, 10, 0, 40)
petLabel.Size = UDim2.new(1, -20, 0, 25)
petLabel.TextWrapped = true

local dupeButton = Instance.new("TextButton", frame)
dupeButton.Size = UDim2.new(0.9, 0, 0, 40)
dupeButton.Position = UDim2.new(0.05, 0, 0, 75)
dupeButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
dupeButton.Text = "Duplicate Equipped Pet"
dupeButton.Font = Enum.Font.FredokaOne
dupeButton.TextSize = 18
dupeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
dupeButton.AutoButtonColor = false
Instance.new("UICorner", dupeButton).CornerRadius = UDim.new(0, 8)
local stroke = Instance.new("UIStroke", dupeButton)
stroke.Color = Color3.fromRGB(0, 0, 0)
stroke.Thickness = 1.2

local function getEquippedPet()
    character = player.Character or player.CharacterAdded:Wait()
    for _, tool in ipairs(character:GetChildren()) do
        if tool:IsA("Tool") and (tool.Name:find("Kitsune") or tool.Name:find("Shiny Kitsune")) then
            return tool
        end
    end
    return nil
end

local function updatePetLabel()
    local pet = getEquippedPet()
    if pet then
        petLabel.Text = "Equipped Pet: " .. pet.Name
    else
        petLabel.Text = "Equipped Pet: [None]"
    end
end

dupeButton.MouseButton1Click:Connect(function()
    local pet = getEquippedPet()
    if pet then
        local clone = pet:Clone()
        clone.Parent = backpack
        dupeButton.Text = "Duplicated: " .. clone.Name
        wait(2)
        dupeButton.Text = "Duplicate Equipped Pet"
    else
        dupeButton.Text = "No pet equipped!"
        wait(2)
        dupeButton.Text = "Duplicate Equipped Pet"
    end
end)

while true do
    updatePetLabel()
    wait(1)
end
